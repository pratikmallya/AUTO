PGM    = kar
CC     = @CC@
OPT    = @OPT_FLAG@
CFLAGS = @CFLAGS@ $(OPT) -I$(AUTO_DIR)/include 
SRC    = $(PGM).c
EXE    = $(PGM).exe
LIBS   = $(AUTO_DIR)/lib/*.o -L$(AUTO_DIR)/lib -lauto_f2c @LIBS@ -lm
RM     = rm -f
#
all: clean $(EXE) run
#
$(EXE): $(SRC:.c=.o)
	$(CC) $(CFLAGS) $(SRC:.c=.o) -o $@ $(LIBS)
#
run: first
#
first:	$(EXE)
	@echo " "
	@echo "Demo $(PGM) is started"
	@echo " "
	@echo "$(PGM) : computation of the solution branch"
	@cp c.$(PGM).1 fort.2
	@touch fort.3
	@$(AUTO_COMMAND_PREFIX) ./$(EXE) $(AUTO_COMMAND_ARGS)
	@cp fort.7 b.$(PGM)
	@cp fort.8 s.$(PGM)
	@cp fort.9 d.$(PGM)
	@echo " Saved as *.$(PGM)"
	@$(RM) fort.*
	@echo " "
	@echo "Demo $(PGM) is done"
#
clean:
	@echo "Cleaning $(PGM) ..."
	@cp $(SRC) $(EXE)
	@$(RM) *.exe *.o b.* s.* d.* fort.* *~ core
	@cp c.$(PGM).1 c.$(PGM)
	@echo "Cleaning ... done"
 
